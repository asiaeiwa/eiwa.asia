{
  "checkJs": true,
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "paths": {
      "*": [
        "src/*"
      ],
      "images/*": [
        "src/assets/images/*"
      ],
      "styles/*": [
        "src/assets/styles/*"
      ]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ]
  },
  "exclude": [
    "node_modules",
    ".next",
    "cloud"
  ],
  "include": [
    "src/**/*",
    ".storybook/**/*",
    "src/.pages"
  ]
}
